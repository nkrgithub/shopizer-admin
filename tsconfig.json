{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": false,
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"]
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
